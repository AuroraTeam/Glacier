{
    "name": "@glacier-app/core",
    "version": "0.1.0",
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "type": "module",
    "bin": {
        "glacier": "cli/index.js"
    },
    "engines": {
        "node": ">=20.11.0"
    },
    "scripts": {
        "build": "npm run build:worker && npm run build:main && npm run build:_index && npm run build:loader && npm run types",
        "build:worker": "esbuild src/worker/worker.ts --bundle --outfile=dist/worker.txt --loader:.html=text --platform=node --minify --legal-comments=none",
        "build:loader": "esbuild src/loader.ts --bundle --outfile=loader/loader.js --platform=node --minify && pkg --sea loader/loader.js --out-path loader",
        "build:main": "esbuild src/index.ts --bundle --outfile=dist/index.pack.js --platform=node --format=esm --minify",
        "build:_index": "echo export * from './index.pack.js'; > dist/index.js",
        "types": "tsc",
        "prettier": "prettier --config .prettierrc.json --write src",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "npm run lint -- --fix",
        "postinstall": "npm run build"
    },
    "keywords": [],
    "author": "AuroraTeam",
    "license": "MIT",
    "dependencies": {
        "@glacier-app/webview": "^0.1.2",
        "@yao-pkg/pkg": "^6.1.1",
        "commander": "^12.1.0",
        "esbuild": "^0.24.0",
        "resedit": "^2.0.2",
        "upx": "github:kostya-main/upx"
    },
    "devDependencies": {
        "@tsconfig/node-lts": "^22.0.1",
        "@tsconfig/strictest": "^2.0.5",
        "@types/node": "^22.10.1",
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "eslint": "^8.56.0",
        "import-sort-style-module": "^6.0.0",
        "prettier": "^3.2.5",
        "prettier-plugin-import-sort": "^0.0.7",
        "typescript": "^5.4.5"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AuroraTeam/Glacier.git"
    },
    "bugs": {
        "url": "https://github.com/AuroraTeam/Glacier/issues"
    },
    "homepage": "https://github.com/AuroraTeam/Glacier#readme",
    "importSort": {
        ".tsx, .ts, .mjs, .js": {
            "style": "module",
            "parser": "typescript"
        }
    },
    "files": [
        "src",
        "cli",
        "types.d.ts",
        "tsconfig.json"
    ]
}
