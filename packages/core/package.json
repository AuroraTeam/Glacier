{
    "name": "@glacier/core",
    "version": "0.1.0",
    "main": "dist/index.pack.js",
    "types": "dist/types/index.d.ts",
    "type": "module",
    "bin": {
        "glacier": "cli/index.js"
    },
    "engines": {
        "node": ">=20.11.0"
    },
    "scripts": {
        "build": "npm run build:worker && npm run build:main && npm run types",
        "build:worker": "esbuild src/worker.ts --bundle --outfile=dist/worker.txt --platform=node --minify",
        "build:main": "esbuild src/index.ts --bundle --outfile=dist/index.pack.js --loader:.txt=base64 --platform=node --format=esm --minify",
        "types": "tsc",
        "test": "npm run build && npm run sea",
        "prettier": "prettier --config .prettierrc.json --write src",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "npm run lint -- --fix"
    },
    "keywords": [],
    "author": "AuroraTeam",
    "license": "MIT",
    "dependencies": {
        "@glacier/webview": "^0.1.0",
        "@liudonghua123/node-sea": "^0.1.4",
        "commander": "^12.1.0",
        "esbuild": "^0.21.5",
        "resedit": "^2.0.2",
        "upx": "github:kostya-main/upx"
    },
    "devDependencies": {
        "@tsconfig/node-lts": "^20.1.3",
        "@tsconfig/strictest": "^2.0.5",
        "@types/node": "^20.12.11",
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "eslint": "^8.56.0",
        "import-sort-style-module": "^6.0.0",
        "prettier": "^3.2.5",
        "prettier-plugin-import-sort": "^0.0.7",
        "typescript": "^5.4.5"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AuroraTeam/Glacier.git"
    },
    "bugs": {
        "url": "https://github.com/AuroraTeam/Glacier/issues"
    },
    "homepage": "https://github.com/AuroraTeam/Glacier#readme",
    "importSort": {
        ".tsx, .ts, .mjs, .js": {
            "style": "module",
            "parser": "typescript"
        }
    }
}
